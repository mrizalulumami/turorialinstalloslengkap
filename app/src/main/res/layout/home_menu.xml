<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#7387a6"
        android:orientation="vertical"
        tools:context=".HomeMenu">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <android.support.v4.view.ViewPager
                android:id="@+id/pager"
                android:layout_width="match_parent"
                android:background="#1d4e74"
                android:layout_height="240dp"
                />

        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                    <ImageButton
                            android:id="@+id/win7"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/windw7"/>

                    <ImageButton
                            android:id="@+id/win8"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:background="@drawable/windw8"/>
                    <ImageButton
                            android:id="@+id/win10"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/windw10"/>
                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center">

                    <ImageButton
                            android:id="@+id/ubuntu"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/ubuntuuu"/>

                    <ImageButton
                            android:id="@+id/about"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:background="@drawable/about"/>
                    <ImageButton
                            android:id="@+id/kali"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/kalli"/>
                </LinearLayout>
            </LinearLayout>

        </ScrollView>
    </LinearLayout>
    <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#1d2741"
            android:gravity="center">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="#ffff"
                android:text="REH Studios"/>

    </LinearLayout>
    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="215dp"
            android:layout_alignParentRight="true">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="205dp"
                android:layout_marginTop="15dp"
                android:background="#5355ba">
        <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Share this apps to"
                android:textSize="15dp"
                android:textStyle="bold"
                android:fontFamily="cursive"
                android:textColor="#f7fafa"/>
        </LinearLayout>
        <ImageButton
                android:layout_alignParentRight="true"
                android:id="@+id/fcbk"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="150dp"
                android:background="@drawable/facebooklogo"/>

        <ImageButton
                android:layout_alignParentRight="true"
                android:id="@+id/wa"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="90dp"
                android:background="@drawable/whatshaplogo"/>
        <ImageButton
                android:layout_alignParentRight="true"
                android:id="@+id/twit"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/twitterlogo"/>
    </RelativeLayout>



</RelativeLayout>